<h1>Login</h1>

<%= form_tag [:sessions] do %>
  <div class="well">
  <div class="form-group">
  Email: <%= text_field_tag :email,nil, placeholder: "Enter your email", class: "form-control"%>
  <br>
  Password: <%= password_field_tag :password,nil,placeholder: "Enter your password", class: "form-control" %>
  </div>
  </div>

  <%= submit_tag "Submit", class: "btn btn-primary btn-lg btn-block" %>

<% end %>
